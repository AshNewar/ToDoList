<%- include("header")-%>
    <body>
        <div class="box" id="heading">
            <h1><%= day%></h1>
        </div>
        <div class="box">
            <%itemList.forEach(function(ele){%>
                <form action="/delete" method="post">
                    <div class="item">
                        <input type="checkbox" name="box" value="<%=ele._id%>" onChange="this.form.submit()">
                        <p><%= ele.name %></p>
                    </div>  
                    <input type="hidden" name="listName" value="<%= day %>"></input>
                </form>
                 
            <%});%>

                
            
            <form class="item" action="/" method="post">
                <input type="text" name="item" placeholder="Write Your Work" autocomplete="off">
                <button type="submit" name="list" value="<%= day %>">+</button>
            </form>

        </div>
       
    </body>
</html>